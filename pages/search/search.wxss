/* pages/search/search.wxss */
.app-search-head {
    display: flex;
    height: 100rpx;
    background-color: #6DC4AC;
}

.app-search-head-input {
    width: 100%;
}

.app-search {
    height: 120rpx;
    width: 90%;
    margin: 0 auto;
}

.search-item {
    display: flex;
    position: relative;
    border: 1px solid #e5e5e5;
    border-radius: 40rpx;
    background: #fff;
    width: 100%;
    margin-top: 18rpx;
}

.search-item .icon {
    position: absolute;
    top: -2rpx;
    left: 6rpx;
    font-size: 44rpx;
    color: #b2b2b2;
}

.search-item .icon2 {
    position: absolute;
    top: -2rpx;
    left: 500rpx;
    font-size: 44rpx;
    color: #b2b2b2;
    z-index: 10;
}

.search-item input {
    width: 75%;
    font-size: 28rpx;
    margin-left: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.search-item .sousuo {
    border-left: 1px solid #e5e5e5;
    height: 60rpx;
    line-height: 60rpx;
}

.search-item .sousuo text {
    padding-left: 30rpx;
    font-size: 28rpx;
}

.commonTitle {
    height: 104rpx;
    line-height: 104rpx;
    background-color: #fff;
    font-size: 32rpx;
    border-bottom: 1px solid #bfbfbf;
    text-indent: 1em;

}

.goodslist {
    display: flex;
    padding: 20rpx 0px;
    background-color: #fff;
    margin-bottom: 2rpx;
}

.goodslist .left {
    width: 240rpx;
    text-align: center;
}

.goodslist .right {
    /* 剩下宽度分配给右侧 */
    flex: 1;
    height: 200rpx;
    /* 相对定位 */
    position: relative;
    margin-right: 20rpx;
}

.goodslist .left image {
    width: 200rpx;
    height: 200rpx;
}

.goodslist .right image {
    width: 44rpx;
    height: 44rpx;
}

.goodslist .right .goods_name {
    font-size: 32rpx;
    color: #808080;
    height: 100rpx;
    /* 溢出隐藏 */
    overflow: hidden;
}

.goodslist .right .goods_address {
    font-size: 24rpx;
    color: #929292;
}

.goodslist .right .goods_price {
    font-size: 30rpx;
    color: #FF1493;
}

.goodslist .right .car {
    position: absolute;
    right: 0px;
    bottom: 0px;
}

.common {
    margin-top: 400rpx;
    height: 52rpx;
    line-height: 52rpx;
    background-color: #fff;
    font-size: 32rpx;
    border-bottom: 1px solid #bfbfbf;
    text-indent: 32rpx;
}